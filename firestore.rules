rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isAuthenticated() {
      return request.auth != null;
    }

    match /clientes/{clienteId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated() && request.resource.data.nome is string;
      allow update: if isAuthenticated();
      allow delete: if isAuthenticated();
    }

    match /maquinas/{maquinaId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated() &&
                      request.resource.data.cliente_id is string &&
                      request.resource.data.fabricante is string &&
                      request.resource.data.modelo is string &&
                      request.resource.data.numero_serie is string;
      allow update: if isAuthenticated();
      allow delete: if isAuthenticated();
    }

    match /relatorios/{relatorioId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated() && request.resource.data.cliente_id is string;
      allow update: if isAuthenticated();
      allow delete: if isAuthenticated();
    }

    match /tintas/{codigo} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated();
      allow update: if isAuthenticated();
      allow delete: if isAuthenticated();
    }

    match /solventes/{codigo} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated();
      allow update: if isAuthenticated();
      allow delete: if isAuthenticated();
    }
  }
}
